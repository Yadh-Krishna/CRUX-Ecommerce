                    <!-- Order Details Content -->
                    <div class="col-lg-9 col-md-8">
                        <div class="content-card">
                            <h2>
                                <i class="fas fa-shopping-bag me-2"></i>
                                Order Details - <%= order.orderId %>
                            </h2>
            
                            <!-- Order Status -->
                            <div class="order-status my-3">
                                <h5>Order Status: 
                                    <span class="badge <%= order.orderStatus === 'Pending' ? 'badge-pending' : 
                                                          order.orderStatus === 'Processing' ? 'badge-processing' : 
                                                          order.orderStatus === 'Shipped' ? 'badge-shipped' : 
                                                          order.orderStatus === 'Delivered' ? 'badge-delivered' : 
                                                          order.orderStatus === 'Cancelled' ? 'badge-cancelled' : 
                                                          order.orderStatus === 'Return Request' ? 'badge-return-requested' : 
                                                          'badge-returned' %>">
                                        <%= order.orderStatus %>
                                    </span>
                                </h5>
            
                                <% if (order.orderStatus === 'Pending' || order.orderStatus === 'Processing' || order.orderStatus === 'Shipped') { %>
                                    <a href="/order/cancel/<%= order._id %>" class="btn btn-danger btn-sm">
                                        <i class="fas fa-times-circle me-1"></i> Cancel Order
                                    </a>
                                <% } %>
            
                                <% if (order.orderStatus === 'Delivered') { %>
                                    <a href="/order/return/<%= order._id %>" class="btn btn-warning btn-sm">
                                        <i class="fas fa-undo-alt me-1"></i> Request Return
                                    </a>
                                <% } %>
                            </div>
            
                            <!-- Order Details -->
                            <div class="order-info mb-4">
                                <h5>Order Information:</h5>
                                <p><strong>Payment Method:</strong> <%= order.paymentMethod %></p>
                                <p><strong>Payment Status:</strong> <%= order.paymentStatus %></p>
                                <p><strong>Total Amount:</strong> â‚¹<%= order.totalAmount.toFixed(2) %></p>
                                <% if (order.expectedDelivery) { %>
                                    <p><strong>Expected Delivery:</strong> <%= new Date(order.expectedDelivery).toDateString() %></p>
                                <% } %>
                                <% if (order.invoiceUrl) { %>
                                    <a href="<%= order.invoiceUrl %>" class="btn btn-info btn-sm" target="_blank">
                                        <i class="fas fa-file-invoice"></i> Download Invoice
                                    </a>
                                <% } %>
                            </div>
            
                            <!-- Shipping Address -->
                            <div class="order-address mb-4">
                                <h5>Shipping Address:</h5>
                                <p><strong>Name:</strong> <%= order.address.name %></p>
                                <p><strong>Address:</strong> <%= order.address.hName %>,<%= order.address.street %>,<%= order.address.city %>, <%= order.address.state %>, <%= order.address.zip %></p>
                                <p><strong>Phone:</strong> <%= order.address.mobile_number %></p>
                            </div>
            
                            <!-- Order Products -->
                            <div class="order-products">
                                <h5>Ordered Items:</h5>
                                <div class="row">
                                    <% order.items.forEach(item => { %>
                                        <div class="col-md-6 mb-4">
                                            <div class="card h-100">
                                                <img src="<%= item.product.images[0] %>" class="card-img-top" alt="<%= item.product.name %>">
                                                <div class="card-body d-flex flex-column">
                                                    <h5 class="card-title"><%= item.product.name %></h5>
                                                    <p class="card-text">Price: â‚¹<%= item.finalPrice.toFixed(2) %></p>
                                                    <p class="card-text">Quantity: <%= item.quantity %></p>                                                        
                            
                                                    <p class="product-status">
                                                        Status: 
                                                        <span class="badge <%= item.status === 'Pending' ? 'badge-pending' : 
                                                                              item.status === 'Processing' ? 'badge-processing' : 
                                                                              item.status === 'Shipped' ? 'badge-shipped' : 
                                                                              item.status === 'Delivered' ? 'badge-delivered' : 
                                                                              item.status === 'Cancelled' ? 'badge-cancelled' : 
                                                                              item.status === 'Return Requested' ? 'badge-return-requested' : 
                                                                              'badge-returned' %>">
                                                            <%= item.status %>
                                                        </span>
                                                    </p>
                            
                                                    <!-- Product Level Actions -->
                                                    <div class="mt-auto">
                                                        <% if (item.status === 'Pending' || item.status === 'Processing' || item.status === 'Shipped') { %>
                                                            <a href="/order/cancel-item/<%= order._id %>/<%= item._id %>" class="btn btn-danger btn-sm">
                                                                <i class="fas fa-times-circle me-1"></i> Cancel Item
                                                            </a>
                                                        <% } %>
                            
                                                        <% if (item.status === 'Delivered') { %>
                                                            <a href="/order/return-item/<%= order._id %>/<%= item._id %>" class="btn btn-warning btn-sm">
                                                                <i class="fas fa-undo-alt me-1"></i> Return Item
                                                            </a>
                                                        <% } %>
                                                    </div>
                            
                                                    <div class="mt-auto">
                                                        <% if (item.status === 'Delivered') { %>
                                                            <a href="/product/review/<%= item.product._id %>" class="btn btn-success btn-sm">
                                                                <i class="fas fa-star"></i> Write a Review
                                                            </a>
                                                        <% } %>
                                                    </div>
                            
                                                </div>
                                            </div>
                                        </div> 
                                    <% }); %> <!-- ðŸš€ Correctly closing the forEach loop here -->
                                </div>
