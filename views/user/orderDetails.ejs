            // Show/hide "Other" text area when "Other" is selected
            document.querySelectorAll(".reason-select").forEach(function (select) {
                select.addEventListener("change", function () {
                    let selectedOption = this.value;
                    let parent = this.closest(".modal-body");
                    let otherReasonField = parent.querySelector(".other-reason");
    
                    if (selectedOption === "Other") {
                        otherReasonField.classList.remove("d-none");
                        otherReasonField.querySelector("textarea").setAttribute("required", "true");
