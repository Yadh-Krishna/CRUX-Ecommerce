    }

    .total-wrap .sub p {
        font-size: 0.9rem;
    }

    .total-wrap .grand-total p {
        font-size: 1rem;
    }

    .product-list .card {
        min-width: 150px;
        max-width: 160px;
    }

    .product-list .card img {
        height: 150px;
    }
}
