<!DOCTYPE HTML>
<html>
<head>
    <title>CRUX | Referrals</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/front/css/style.css">
    <style>
        /* Custom Styling for Referrals Page */
        /* Custom CSS for Wishlist Page */
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        .profile-container {
            padding-top: 2rem;
            padding-bottom: 4rem;
        }
        
        /* Sidebar Styling */
        .profile-sidebar {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            overflow: hidden;
            height: 100%;
        }
        
        .profile-header {
            background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
            padding: 2rem 1.5rem;
            color: white;
            text-align: center;
        }
        
        .profile-image {
            position: relative;
            display: inline-block;
        }
        
        .profile-image img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 4px solid rgba(255, 255, 255, 0.2);
            object-fit: cover;
        }
        
        .profile-image .edit-avatar {
            position: absolute;
            bottom: 0;
            right: 0;
            background: white;
            border-radius: 50%;
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6366F1;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .profile-image .edit-avatar:hover {
            background: #f0f0f0;
        }
        
        .nav-menu {
            padding: 1rem 0;
        }
        
        .nav-menu .nav-item {
            padding: 0;
        }
        
        .nav-menu .nav-link {
            padding: 0.75rem 1.5rem;
            color: #4B5563;
            display: flex;
            align-items: center;
            transition: all 0.2s;
            border-left: 3px solid transparent;
        }
        
        .nav-menu .nav-link i {
            margin-right: 12px;
            font-size: 1.2rem;
            width: 24px;
            text-align: center;
        }
        
        .nav-menu .nav-link:hover {
            background-color: #F3F4F6;
            color: #6366F1;
        }
        
        .nav-menu .nav-link.active {
            background-color: #F3F4F6;
            color: #6366F1;
            border-left: 3px solid #6366F1;
            font-weight: 500;
        }

        .content-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .referral-code {
            font-size: 16px;
            font-weight: 500;
            background: #f3f4f6;
            padding: 10px;
            border-radius: 5px;
            display: inline-block;
            margin-right: 10px;
        }

        .btn-copy {
            cursor: pointer;
            border: none;
            background: none;
            font-size: 18px;
            color: #6366F1;
        }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        .form-inline input {
            width: 100%;
        }

        .invite-btn {
            background-color: #6366F1;
            color: white;
            border-radius: 5px;
            padding: 8px 15px;
            font-size: 14px;
        }

        .invite-btn:hover {
            background-color: #4f46e5;
        }
    </style>
</head>
<body>
    <%- include('./userPartials/header') %> 

    <div class="container profile-container">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3 col-md-4">
                <div class="profile-sidebar">
                    <div class="profile-header">
                        <div class="profile-image">
                            <img src="<%= user.image %>" alt="<%= user.fullName %>" class="img-fluid">
                        </div>
                        <h4 class="mt-3 mb-1"><%= user.fullName %></h4>
                        <p class="mb-0"><%= user.email %></p>
                    </div>
                    
                    <ul class="nav flex-column nav-menu">
                        <li class="nav-item">
                            <a class="nav-link " href="/profile">
                                <i class="fas fa-user"></i> Account Overview
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile/my-orders">
                                <i class="fas fa-shopping-bag"></i> My Orders
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile/addresses">
                                <i class="fas fa-map-marker-alt"></i> Manage Addresses
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile/wallet">
                                <i class="fas fa-wallet"></i> Wallet
                            </a>
                        </li>
                        <!-- <li class="nav-item">
                            <a class="nav-link" href="/profile/coupons">
                                <i class="fas fa-ticket-alt"></i> Coupons
                            </a>
                        </li> -->
                        <li class="nav-item">
                            <a class="nav-link active" href="/profile/wishlist">
                                <i class="fas fa-heart"></i> Wishlist
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile/referrals">
                                <i class="fas fa-user"></i> Referrals
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="/logout">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            
            <!-- Referrals Content -->
            <div class="col-lg-9 col-md-8">
                <div class="content-card">
                    <h2>
                        <i class="fas fa-user-friends me-2"></i>
                        My Referrals
                    </h2>

                    <!-- Referral Code Section -->
                    <div class="mb-4">
                        <h5>Your Referral Code:</h5>
                        <% if (referral.referralCode) { %>
                            <span class="referral-code" id="referralCode"><%= referral.referralCode %></span>
                            <!-- <button class="btn-copy" onclick="copyReferralCode()">
                                <i class="fas fa-copy"></i>
                            </button> -->
                        <% }  %>                       
                    </div>

                    <!-- Invite Friends Section -->
                    <div class="mb-4">
                        <h5>Invite a Friend:</h5>
                        <form id="sendInvitationForm" class="form-inline">
                            <div >
                                <input id="emailInput" type="email" name="inviteEmail" class="form-control" placeholder="Enter friend's email">
                                <button type="submit" id="sendButton" class="btn invite-btn">Send Invitation</button>
                                <span id="emailError" class="text-danger"></span>
                            </div>
                        </form>
                    </div>

                    <!-- Referred Users List -->
                    <h5>Referred Users:</h5>
                    <% if (referral.referredUsers && referral.referredUsers.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Joined Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% referral.referredUsers.forEach((user, index) => { %>
                                        <tr>
                                            <td><%= index + 1 %></td>
                                            <td><%= user.fullName %></td>
                                            <td><%= user.email %></td>
                                            <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-3">
                            <i class="fas fa-user-friends fa-4x text-muted mb-3"></i>
                            <h4>No Referred Users Yet</h4>
                            <p class="text-muted">Invite your friends to join and earn rewards!</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <%- include('./userPartials/footer') %> 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const inviteForm = document.getElementById('sendInvitationForm');
            const emailInput = document.getElementById('emailInput');
            const emailError = document.getElementById('emailError');
            
            // Gmail regex to check the email format
            const emailRegex = /^[a-zA-Z0-9._%+-]+@gmail\.com$/;
    
            inviteForm.addEventListener('submit', function (e) {
                e.preventDefault(); // Prevent form submission to handle validation
    
                const email = emailInput.value.trim();  // Get the value and remove any extra spaces
    
                // Reset previous error message
                emailError.textContent = '';
    
                if (email === '') {
                    // If email is empty, show the error message
                    emailError.textContent = 'Email is required';
                } else if (!emailRegex.test(email)) {
                    // If email format is not valid
                    emailError.textContent = 'Enter a valid Gmail address';
                } else {
                    // If email is valid, submit the form
                    // If email is valid, send the data using PATCH

                    sendButton.disabled = true;
                    sendButton.textContent = 'Sending...';
                  const requestData = { inviteEmail: email };

                    fetch('/profile/referrals', {
                        method: 'PATCH',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(requestData),  // Send the data as JSON
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Invitation Sent',
                                text: 'The invitation has been sent to the email address provided.',
                                icon: 'success',
                                showConfirmButton:"OK"
                            })
                        } else {
                            Swal.fire({
                               title: 'Error',
                               text: data.message,
                               icon: 'error',
                               showConfirmButton:"OK"
                            })
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire({
                               title: 'Error',
                               text: 'Internal server error',
                               icon: 'error',
                               showConfirmButton:"OK"
                            })
                    });

                }
            });

            

            
        });
    </script>
</body>
</html>
