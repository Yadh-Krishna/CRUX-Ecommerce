                        </li>
                        <li class="cart-summary-item">
                            <span>Subtotal</span>
                            <span  class="price" id="subtotal">₹<%= cart ? cart.subtotal : '0.00' %></span>
                        </li>
                        <% if (cart && cart.tax > 0) { %>
                            <li class="cart-summary-item">
                                <span>Tax</span>
                                <span id="tax" class="price">₹<%= cart.tax %></span>
                            </li>
                        <% } %>
                        <li class="cart-summary-item">
                            <span>Shipping</span>
                            <span id="shippingCharge" class="price">₹<%= cart && cart.shipping ? cart.shipping : '0.00' %></span>
                        </li>
                        <% if ((appliedCoupon && couponOff)|| 0 > 0) { %>
