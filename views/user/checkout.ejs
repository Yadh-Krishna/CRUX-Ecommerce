<script>

document.addEventListener("visibilitychange", async function () {
    const couponId="<%= appliedCoupon ? appliedCoupon._id : '' %>";
        if (document.visibilityState === "hidden") {           
             const response=await fetch("/remove-coupon", { method: "PATCH" ,headers:{"Content-Type":"application/json"}, 
