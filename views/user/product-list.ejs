                                        <%= (Array.isArray(selectedBrands) && selectedBrands.includes(brand._id.toString())) ? "checked" : "" %>>
                                    <label for="brand-<%= brand._id %>"><%= brand.name %></label>
                                </div>
                            <% }) %>
