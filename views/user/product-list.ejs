                                        <%= (Array.isArray(selectedCategories) && selectedCategories.includes(category._id.toString())) ? "checked" : "" %>>
                                    <label for="category-<%= category._id %>"><%= category.name %></label>
                                </div>
                            <% }) %>
                        </div>
                    </div>
        
                    <!-- Sort by Price (Column 4) -->
                    <div class="col-md-3">
                        <div class="filter-section border mb-2">
                            <h3>Sort by Price</h3>
                            <div>
                                <input type="radio" name="sort" value="priceLowToHigh" id="priceLowToHigh"
                                    <%= sort === "priceLowToHigh" ? "checked" : "" %>>
                                <label for="priceLowToHigh">Low to High</label>
                            </div>
                            <div>
                                <input type="radio" name="sort" value="priceHighToLow" id="priceHighToLow"
                                    <%= sort === "priceHighToLow" ? "checked" : "" %>>
                                <label for="priceHighToLow">High to Low</label>
                            </div>
                        </div>
                    </div>       
                  
                
                </div>
        
                <!-- Apply Filter and Clear Filter Buttons -->
