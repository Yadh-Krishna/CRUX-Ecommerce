		<div class="colorlib-product">
			<div class="container">
				<div class="row">
					<div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
						<h2>Product List</h2>
					</div>
				</div>
				<div class="row row-pb-md">
					<% products.forEach(product => { %>
						<div class="col-lg-3 mb-4 text-center">							
							<div class="product-entry border p-3">
								<a href="/user/products/<%=product._id%>	"  class="prod-img d-block position-relative">
									<img src="<%= product.images[1] %>" class="img-fluid" alt="<%= product.name %> ">
									<% if (product.discount > 0) { %>
										<span class="badge badge-danger position-absolute top-0 start-0 m-2">
											<%= product.discount %>% OFF
										</span>
									<% } %>
								</a>
								<div class="desc mt-3">
									<h2 class="h5"><a href="/user/products/<%=product._id%>"><%= product.name %></a></h2>
									<div class="rating mb-2">
										<span class="text-warning">
											<% for (let i = 0; i < 5; i++) { %>
												<%- i < product.rating ? "&#9733;" : "&#9734;" %>
											<% } %>											
										</span> <%= product.ratings %>
									</div>
									<div class="price">
										<% if (product.discount > 0) { %>
											<span class="text-muted text-decoration-line-through">
												₹<%= product.price.toFixed(2) %>
											</span>
										<% } %>
										<span class="text-dark fw-bold">₹<%= product.finalPrice.toFixed(2) %></span>
									</div>
								</div>
							</div>
						</div>
					<% }) %>
				</div>
				<div class="row">
					<div class="col-md-12 text-center">
						<p><a href="/user/product-list" class="btn btn-primary btn-lg">All Products</a></p>
					</div>
				</div>
			</div>
