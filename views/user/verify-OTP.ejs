    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/assets/js/main.js" type="text/javascript"></script>
    
    <script>

document.addEventListener("DOMContentLoaded", function () {
    const errorAlert = document.querySelector(".alert-danger");

    // Remove error alert after 5 seconds
    if (errorAlert) {
        setTimeout(() => {
            errorAlert.style.display = "none";
        }, 5000);
    }

    let countdown = 60;
    let timer;
    const countdownElement = document.getElementById("countdown");
    const resendButton = document.getElementById("resendOtp");

    // Function to start countdown timer
    function startTimer() {
        clearInterval(timer); // Prevent multiple timers

        countdown = 60;
        countdownElement.textContent = countdown;
        resendButton.setAttribute("disabled", true);

        timer = setInterval(() => {
            countdown--;
            countdownElement.textContent = countdown;
            if (countdown === 0) {
                clearInterval(timer);
                resendButton.removeAttribute("disabled"); // Enable button when timer ends
            }
        }, 1000);
    }

    // Function to resend OTP
    async function resendOTP() {
        resendButton.setAttribute("disabled", true); // Disable button immediately
        try {
            const response = await fetch("/resend-otp", { method: "PATCH" });
            const data = await response.json();

            if (response.ok) {
                Swal.fire({
                    icon: "success",
                    text: data.message,
                    showConfirmButton: true
                }).then(() => {
                    startTimer(); // Restart countdown after user dismisses Swal
                });
            } else {
                Swal.fire({
                    icon: "error",
                    title: "Error",
                    text: data.error || "Failed to resend OTP. Please try again."
                });
                resendButton.removeAttribute("disabled"); // Enable button if resend fails
            }
        } catch (err) {
            console.error("Error resending OTP:", err);
            Swal.fire({
                icon: "error",
                title: "Error",
                text: "Something went wrong. Please try again later."
            });
            resendButton.removeAttribute("disabled"); // Ensure button is enabled on failure
        }
    }

    // Attach event listener to the "Resend OTP" button
    resendButton.addEventListener("click", function () {
        resendOTP();
    });

    // Start countdown when page loads
    startTimer();
});

    </script>
</body>

</html>