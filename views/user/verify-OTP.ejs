    <link rel="shortcut icon" type="image/x-icon" href="">
    <!-- Template CSS -->
    <link href="/assets/css/main.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <main>
        <section class="content-main mt-80 mb-80">
            <div class="card mx-auto card-login">
                <div class="card-body">
                    <img class="d-block mx-auto mb-3" src="/logo/logo-white.png" alt="CRUX">
                    <h4 class="card-title mb-4 text-center">OTP Verification</h4>
                    
                    <% if (error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>
                    
                    <form id="otpForm" action="/user/verify-otp" method="post">
                        <div class="mb-3">
                            <label class="form-label">Enter OTP</label>
                            <input class="form-control text-center" name='otp' id="otp" placeholder="Enter 6-digit OTP" type="number" required>
                            <small class="text-danger" id="otpError"></small>
                        </div>
                        
                        <div class="mb-3 text-center">
                            <p id="timer" class="text-muted">Resend OTP in <span id="countdown">60</span> seconds</p>
                            <button type="button" id="resendOtp" class="btn btn-link" onclick="resendOTP()" disabled>Resend OTP</button>
                        </div>
                        
                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100"> Verify OTP </button>
                        </div>
                    </form>
                    
                    <p class="text-center small text-muted mb-15">or sign in with</p>              
                    <p class="text-center mb-2">Didn't sign up? <a href="/user/register">Go Back</a></p>
                </div>
            </div>
        </section>      
       
        <footer class="main-footer text-center">
            <p class="font-xs">
                <script>
                document.write(new Date().getFullYear())
                </script> Â©, CRUX - Ecommerce Platform .
            </p>
            <p class="font-xs mb-30">All rights reserved</p>
        </footer>
    </main>
    <script src="/assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/assets/js/main.js" type="text/javascript"></script>
    <script>

const errorAlert = document.querySelector(".alert-danger");

// If error alert exists, remove it after 3 seconds
if (errorAlert) {
    setTimeout(() => {
        errorAlert.style.display = "none";
    }, 5000); // Hides after 3 seconds
}


       let countdown = 60,timer;
    const countdownElement = document.getElementById("countdown");
    const resendButton = document.getElementById("resendOtp");

    function resendOTP() {
        fetch("/user/resend-otp", { method: "PATCH" })
            .then(response => response.json())
            .then(data => {
                if (data.message) {
                    Swal.fire({
                    icon:"success",
                    text: data.message,                    
                    showConfirmButton: true
                });
                    startTimer();
                } else {
                    Swal.fire({
                    icon: "error",
                    title: "Error",
                    text: "Failed to resend OTP. Please try again."
                });
                resendButton.removeAttribute("disabled"); // Re-enable button if resend fails
            }                
            }) .catch(err => console.error(err));
            }
           
    
    
    const interval = setInterval(() => {
        countdown--;
        countdownElement.textContent = countdown;
        if (countdown === 0) {
            clearInterval(interval);
            resendButton.removeAttribute("disabled");
        }
    }, 1000);
    
    resendButton.addEventListener("click", function() {
        resendButton.setAttribute("disabled", true);
        countdown = 60;
        countdownElement.textContent = countdown;
         timer=setInterval(() => {
            countdown--;
            countdownElement.textContent = countdown;
            if (countdown === 0) {
                clearInterval(timer);
                resendButton.removeAttribute("disabled");
            }
        }, 1000);
    });


    </script>
</body>

</html>