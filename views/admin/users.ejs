<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customer Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/css/users.css">
</head>
<body>
  <%- include('../partials/header') %>
  <div class="container-fluid">
    <div class="row">
      <%- include('../partials/sidebar') %>
      <div class="col-md-10 main-content">
        <h1 class="mt-3">Customer Management</h1><br>
        <header class="d-flex justify-content-between align-items-center mb-4 flex-column flex-md-row">
          <form action="/admin/users" method="GET" class="w-100 mb-3 mb-md-0">
            <div class="input-group">
              <input type="text" id="searchBar" name="searchUsers" class="form-control" placeholder="Search users...">
              <button id="searchButton" class="btn btn-primary">Search</button>
            </div>
            <div id="searchSuggestions" class="search-suggestions list-group mt-1" style="display: none;">
              <!-- Suggestions will be dynamically populated here -->
            </div>
          </form>
        </header>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">User List</h5>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr> 
                </thead>
                <tbody id="userTableBody">
                  <% if (users.length > 0) { %>
                  <% users.forEach(user => { %>
                    <tr id="userRow-<%= user._id %>">
                      <td><%= user.fullName %></td>
                      <td><%= user._id %></td>
                      <td><%= user.email %></td>
                      <td id="status-<%= user._id %>" >
                        <% if (user.isActive) { %>
                          <span class="text-success">Active</span>
                        <% } else { %>
                          <span class="text-danger">Inactive</span>
                        <% } %>
                      </td>
                      <td>
                        <button class="btn btn-warning" data-user-id="<%= user._id %>" onclick="toggleUserStatus('<%= user._id %>')">
                            <%= user.isActive? 'Block' : 'Unblock' %>
                        </button>
                      </td>
                    </tr>
                  <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="5" class="text-center">No users found</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
            <!-- Pagination Controls -->
            <div class="pagination d-flex justify-content-center mt-3">
              <% if (currentPage > 1) { %>
                <a href="/admin/users?page=<%= currentPage - 1 %>&searchUsers=<%= searchTerm %>" class="page-link me-2">Previous</a>
              <% } %>

              <% for(let i = 1; i <= totalPages; i++) { %>
                <a href="/admin/users?page=<%= i %>&searchUsers=<%= searchTerm %>" 
                  class="page-link <%= i === currentPage ? 'active' : '' %> me-2"><%= i %></a>
              <% } %>

              <% if (currentPage < totalPages) { %>
                <a href="/admin/users?page=<%= currentPage + 1 %>&searchUsers=<%= searchTerm %>" class="page-link">Next</a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/users.js"></script>
</body>
</html>